---
import { type Job } from "@/data/job";

interface Props {
  job: Job;
}

const { job } = Astro.props;
---

<div class="flex py-5 flex-col gap-y-5">
  <div class="flex w-full justify-between">
    <div class="flex gap-x-4 w-2/5">
      <img alt={job.alt} src={job.img} class="w-6 h-6 mt-2" />
      <div class="flex flex-col">
        <span class="font-bold">
          {job.title}
        </span>
        <span>{job.company}</span>
      </div>
    </div>
    <span class="font-semibold right-0">{job.timestamp}</span>
  </div>
  {job.description && <span>{job.description}</span>}
</div>
